{
    "name": "dagon-ng",
    "description": "3D game engine for D",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov",
        "Rafał Ziemniewski",
        "Björn Roberg",
        "dayllenger",
        "Mateusz Muszyński"
    ],

    "importPaths": ["src"],
    "sourcePaths": ["src"],
    "stringImportPaths": ["shaders", "data/__internal"],
    
    "mainSourceFile": "src/main.d",

    "dependencies": {
        "dlib": "~>0.16.0",
        "bindbc-opengl": "~>0.7.1",
        "bindbc-sdl": "~>0.7.0"
    },

    "versions": [
        "SDL_205",
        "GL_40",
        "GL_KHR_debug",
        "FT_28",
        "NK_ALL"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],
    
    "configurations": [
        {
            "name": "application",
            "targetType": "executable",
            "dependencies": {
                "bindbc-freetype": "~>0.1.0",
                "bindbc-nuklear": "~>0.1.1"
            }
        },
        {
            "name": "Minimal",
            "targetType": "executable",
            "versions": ["NoFreetype", "NoNuklear"]
        },
        {
            "name": "NoFreetype",
            "targetType": "executable",
            "dependencies": {
                "bindbc-nuklear": "~>0.1.1"
            },
            "versions": ["NoFreetype"]
        },
        {
            "name": "NoNuklear",
            "targetType": "executable",
            "dependencies": {
                "bindbc-freetype": "~>0.1.0"
            },
            "versions": ["NoNuklear"]
        },
    ],
    
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"]
}
